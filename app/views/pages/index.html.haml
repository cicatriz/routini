#shuffler.row
  Shuffle
  = link_to "all", tasks_path(:all => true) 
  - @contexts.each do |c|
    = link_to c.name, c 

%div.row
  #task-list.span6
    %h3
      Tasks

    %ul
      - @tasks.each do |t|
        %li
          - t.task_contexts.each do |tc|
            %span.context
              =tc.context.name

          = link_to t.name, task_path(t)
          %span.small
            (#{t.time/60} min)
          - t.task_roles.each do |tr|
            %span.role
              +#{tr.points} #{tr.role.name}

    #new-task-area.new-item
      = render "tasks/form"

  #chart.span10
    %div.row
      %h3
        Points
      #point-chart{ :style       => "width:500px;height:300px;", 
                    "data-pts"   => @rp_json, 
                    "data-ticks" => @rp_ticks }


      %ul 
        - @points.each do |p|
          %li
            %span.small
              #{time_ago_in_words(p.created_at)} ago:
            %span.role
              + 
              = p.points  
              = p.role.name 
            for 
            = p.task.name

    %div.row

      #roles.span5
        %h3
          Roles

        #new-role-area.new-item
          = render "roles/form"

        %ul
          - @roles.each do |r|
            %li
              #{r.name} - #{r.description}
              %span.small= link_to "edit", edit_role_path(r)
              %span.small= link_to "remove", { :controller => "roles", :action => "destroy", :id => r.id }, :confirm => "Are you sure?", :method => "delete"



      #contexts.span5
        %h3 
          Contexts

        #new-context-area.new-item
          = form_for @context do |f|
            %p
              = f.label :name
              = f.text_field :name
            = f.submit "Add context"

        %ul
          - @contexts.each do |c|
            %li= c.name


