%h1
  Routini
  
%h2
  Tasks

= link_to "Go!", tasks_path

%ul
  - @tasks.each do |t|
    %li
      = t.name
      %span.time
        for #{t.time} s
      - t.task_roles.each do |tr|
        %span.role
          +#{tr.points} #{tr.role.name}

= form_for(@task) do |f|
  %p
    = f.label :name
    = f.text_field :name
  %p 
    = f.label :time
    = f.text_field :time, :size => 4
    seconds
  %p
    = f.fields_for :task_roles do |ff|
      %p 
        Attribute to 
        = ff.select :role_id, @role_options
        for
        = ff.select :points, [[1,1],[2,2],[3,3]]
        points
  %p 
    = f.submit "Add task"

%h2
  Roles

%ul
  - @roles.each do |t|
    %li
      = t.name

= form_for(@role) do |f|
  %p
    = f.label :name
    = f.text_field :name
  %p 
    = f.submit "Add role"


%h2 
  Contexts

%h2 
  Points

%ul 
  - @points.each do |p|
    %li
      #{time_ago_in_words(p.created_at)} ago:
      + 
      = p.points  
      = p.role.name 
      for 
      = p.task.name
