%h1
  Routini
  
%h2
  Routines

= link_to "Shuffle!", tasks_path

%ul
  - @tasks.each do |t|
    %li
      = link_to t.name, task_path(t)
      %span.time
        (#{t.time/60} min)
      - t.task_roles.each do |tr|
        %span.role
          +#{tr.points} #{tr.role.name}

= render "tasks/form"

%h2
  Roles

%ul
  - @roles.each do |t|
    %li
      = t.name

= form_for(@role) do |f|
  %p
    = f.label :name
    = f.text_field :name
  %p 
    = f.submit "Add role"


%h2 
  Contexts

%h2 
  Points

#point-chart{ :style       => "width:500px;height:300px;", 
              "data-pts"   => @rp_json, 
              "data-ticks" => @rp_ticks }


%ul 
  - @points.each do |p|
    %li
      #{time_ago_in_words(p.created_at)} ago:
      + 
      = p.points  
      = p.role.name 
      for 
      = p.task.name
